<%- include('partials/header') %>

<main class="add-edit-trip-container">
    <h2><%= trip ? "Edit Trip" : "Add New Trip" %></h2>
    <form action="<%= trip ? `/trips/edit/${trip._id}` : '/trips/add' %>" method="POST" class="trip-form">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="<%= trip ? trip.title : '' %>" placeholder="Enter trip title" required>
        </div>
        <div class="form-group">
            <label for="destination">Destination</label>
            <input type="text" name="destination" id="destination" value="<%= trip ? trip.destination : '' %>" placeholder="Enter destination" required>
        </div>
        <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" name="startDate" id="startDate" value="<%= trip ? trip.startDate.toISOString().split('T')[0] : '' %>" required>
        </div>
        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" name="endDate" id="endDate" value="<%= trip ? trip.endDate.toISOString().split('T')[0] : '' %>" required>
        </div>
        <div class="form-group">
            <label for="notes">Notes</label>
            <textarea name="notes" id="notes" placeholder="Enter any notes or details about the trip"><%= trip ? trip.notes : '' %></textarea>
        </div>
        <button type="submit" class="btn-primary"><%= trip ? "Update Trip" : "Save Trip" %></button>
    </form>
</main>

<%- include('partials/footer') %>